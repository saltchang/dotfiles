# Ghostty Configuration
# Documentation: https://ghostty.org/docs/config

# ===== Theme Configuration =====
theme = salty-nozo

# ===== Font Settings =====
font-family = JetBrainsMono Nerd Font
font-size = 12
font-style = regular
font-style-bold = bold
font-style-italic = italic
font-style-bold-italic = bold-italic

# Font features
font-feature = -liga  # Disable ligatures

# ===== Window Settings =====
window-width = 80
window-height = 30
window-padding-x = 4
window-padding-y = 4

bell-features = system, audio, attention, title, border

# Background settings
background-opacity = 0.5
background-blur-radius = 10

# ===== Shell Integration =====
shell-integration = zsh
shell-integration-features = true

# ===== Mouse & Clipboard =====
# Copy on select
copy-on-select = false

# Mouse hide delay
mouse-hide-while-typing = true

# ===== Scrollback =====
scrollback-limit = 100000

# Command to launch
command = /bin/zsh

# Confirm before quit
confirm-close-surface = false

cursor-click-to-move = true

# Window decorations
window-decoration = true

# ===== Key Bindings (Linux) =====
# Copy/Paste
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_clipboard

# Font size
keybind = ctrl+equal=increase_font_size:1
keybind = ctrl+plus=increase_font_size:1
keybind = ctrl+minus=decrease_font_size:1
keybind = ctrl+0=reset_font_size

# Tab management
keybind = ctrl+shift+t=new_tab
keybind = ctrl+shift+w=close_surface
keybind = ctrl+tab=next_tab
keybind = ctrl+shift+tab=previous_tab

# Window management
keybind = ctrl+shift+n=new_window

# Scrolling
keybind = ctrl+shift+up=scroll_page_lines:-1
keybind = ctrl+shift+down=scroll_page_lines:1
keybind = ctrl+shift+page_up=scroll_page_up
keybind = ctrl+shift+page_down=scroll_page_down
keybind = ctrl+shift+home=scroll_to_top
keybind = ctrl+shift+end=scroll_to_bottom

# Reload config
keybind = ctrl+shift+f5=reload_config

# ===== macOS Specific Settings =====
# These will only apply on macOS
macos-titlebar-style = transparent
macos-option-as-alt = true

# ===== Miscellaneous =====
# Unfocused split opacity
unfocused-split-opacity = 0.8

link-previews = true
