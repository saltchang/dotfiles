#!/bin/bash
# shellcheck disable=SC1091

GREEN="\033[0;32m"
NC="\033[0m"

LINUX="Linux"
MACOS="macOS"

case $(uname) in
Darwin)
    OS_NAME=$MACOS
    ;;

Linux)
    OS_NAME=$LINUX
    ;;
esac

update_git() {
    local LOCAL_GIT_VERSION
    LOCAL_GIT_VERSION=$(command git --version | cut -d ' ' -f 3)

    local LATEST_GIT_VERSION
    LATEST_GIT_VERSION=$(curl --silent https://mirrors.edge.kernel.org/pub/software/scm/git/ | grep tar | grep -o '[0-9]\+\.[0-9]\+\.[0-9]\+' | sort --version-sort | tail -1)

    printf '\n'
    printf '%s\n' "Current Git Version: $LOCAL_GIT_VERSION"
    printf '\n'
    printf '%s\n' "Latest Git Version: $LATEST_GIT_VERSION"
    printf '\n'

    if [ "$LOCAL_GIT_VERSION" = "$LATEST_GIT_VERSION" ]; then
        printf '%b%s%b\n' "$GREEN" "Git is already up-to-date." "$NC"
        return
    fi

    printf '%s\n' "Start to update Git..."
    printf '\n'
    case $OS_NAME in
    "$MACOS")
        brew list git || brew install git
        brew update && brew upgrade git &&
            printf '%b%s%b\n' "$GREEN" "Git updated successfully." "$NC" &&
            source "$HOME/.zshrc"
        ;;
    "$LINUX")
        sudo add-apt-repository ppa:git-core/ppa -y &&
            sudo apt-get update &&
            sudo apt-get install git -y &&
            printf '%b%s%b\n' "$GREEN" "Git updated successfully." "$NC"
        ;;
    esac
}

update_git
